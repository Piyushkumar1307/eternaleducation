<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsHomeActivity"
    android:background="#C5C5BA">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_bottom_navigation_view"
        android:elevation="8dp"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menu" />


    <TextView
        android:layout_width="378dp"
        android:layout_height="100dp"
        android:layout_above="@+id/bottomNavigationView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="521dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Eternal Education"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="215dp"
        android:layout_height="31dp"
        android:layout_above="@+id/bottomNavigationView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="171dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="496dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="by -Treta Education"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="normal" />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="37dp"
        android:layout_above="@+id/bottomNavigationView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="399dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_account" />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="37dp"
        android:layout_above="@+id/bottomNavigationView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="341dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_baseline_group" />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="37dp"
        android:layout_above="@+id/bottomNavigationView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="277dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_baseline_developer" />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="37dp"
        android:layout_above="@+id/bottomNavigationView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="148dp"
        android:scaleType="fitXY"
        android:src="@drawable/instag" />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="37dp"
        android:layout_above="@+id/bottomNavigationView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="210dp"
        android:scaleType="fitXY"
        android:src="@drawable/utube" />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="37dp"
        android:layout_above="@+id/bottomNavigationView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="83dp"
        android:scaleType="fitXY"
        android:src="@drawable/book" />

    <Button
        android:id="@+id/about_us"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomNavigationView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="393dp"
        android:backgroundTint="@color/white"
        android:text="About us"
        android:textColor="@color/amp_blue"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Teacher"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomNavigationView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="335dp"
        android:backgroundTint="@color/white"
        android:text="Teachers"
        android:textColor="@color/amp_blue"
        android:textStyle="bold" />

    <Button
        android:id="@+id/developers"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomNavigationView"
        android:layout_alignParentStart="true"
